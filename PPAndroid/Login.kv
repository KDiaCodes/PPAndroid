<Connected>:

    BoxLayout:

        orientation: 'vertical'

        padding: [10,50,10,50]

        spacing: 50	
			
		

        Label:

            text: "You are now connected"

            font_size: 32

        BoxLayout:
		
			orientation: 'vertical'
			
			
		
			Button:
				
				text: "Open door"
				
				font_size: 24
				
				on_press: root.open(root.recipient)
			
			
			
			BoxLayout:
				
				orientation: "horizontal"
			
			
				
				Button:
				
					text: "Turn on light"
			
					font_size: 24
					
					on_press: root.lOn(root.recipient)		
					
				
				
				Button:
				
					text: "Turn off light"
					
					font_size: 24
					
					on_press: root.lOff(root.recipient)
				
			Button:
	
				text: "Disconnect"
	
				font_size: 24
	
				on_press: root.disconnect()

<Login>:

    BoxLayout

        id: login_layout

        orientation: 'vertical'

        padding: [10,50,10,50]

        spacing: 50



        Label:

            text: 'Welcome'

            font_size: 32



        BoxLayout:

            orientation: 'vertical'



            Label:
			
			    text: 'Login'

                font_size: 18

                halign: 'left'

                text_size: root.width-20, 20



            TextInput:

                id: login

                multiline:False

                font_size: 28

				cursor_color: [0, 0, 0, 1]
				


        BoxLayout:

            orientation: 'vertical'

            Label:
			
                text: 'Password'

                halign: 'left'

                font_size: 18

                text_size: root.width-20, 20



            TextInput:

                id: password

                multiline:False

                password:True

                font_size: 28
				
				cursor_color: [0, 0, 0, 1]



        Button:

            text: 'Connect'

            font_size: 24



            on_press: root.do_login(login.text, password.text)			